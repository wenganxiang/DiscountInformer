<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <Button
            android:id="@+id/button_back_to_homepage"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="返回"/>
        <TextView
            android:id="@+id/text_view_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入你要找的商品或品牌"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/button_back_to_homepage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_search_black_18dp"/>

    </LinearLayout>

    <!--下面还应该添加一个限制打折信息列表的recycleview -->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ListView
            android:id="@+id/list_view_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
